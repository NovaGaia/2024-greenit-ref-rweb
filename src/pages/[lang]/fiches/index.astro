---
import Seo from "@components/Seo.astro";
import FichesListView from "@components/fiches/FichesListView.astro";
import { code_languages } from "@i18n/ui";
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import Base from "@layouts/Base.astro";

export async function getStaticPaths() {
  return code_languages.map((lang) => {
    return { params: { lang } };
  });
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Base>
  <Seo
    title={t("Bonnes pratiques")}
    description={t(
      "Les Fiches de Bonnes pratiques pour rendre WordPress plus respectueux de l'environnement.",
    )}
    slot="seo"
  />
  <FichesListView data-pagefind-ignore />
</Base>
