---
import Seo from "@components/Seo.astro";
import LexiqueListView from "@components/lexique/LexiqueListView.astro";
import { code_languages } from "@i18n/ui";
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import Base from "@layouts/Base.astro";

export async function getStaticPaths() {
  return code_languages.map((lang) => {
    return { params: { lang } };
  });
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Base>
  <Seo
    title={t("Lexique")}
    description={t(
      "Les termes utilisés pour rendre le numérique plus respectueux de l'environnement.",
    )}
    slot="seo"
  />
  <LexiqueListView />
</Base>
