// Get entry activated by getStaticPaths
const { entry } = Astro.props;
let response: any = {};
try {
  await client.queries
    .personnas({
      relativePath: `/${entry.id}`,
    })
    .then((res) => {
      response = res;
    });
} catch (error) {
  // not in edit mode
}

// Use Astro Entry renderer
const { Content } = await entry.render();
