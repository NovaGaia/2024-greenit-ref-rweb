// Get entry activated by getStaticPaths
const { lang, slug } = Astro.params;
const { entry } = Astro.props;
let response: any = {};
try {
  await client.queries
    .personnas({
      relativePath: `/${entry.id}`,
    })
    .then((res) => {
      response = res;
