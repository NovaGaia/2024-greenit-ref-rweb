---
import Base from "@layouts/Base.astro";
import client from "@tina/__generated__/client";
import { type CollectionEntry } from "astro:content";
import { getPersonnas } from "src/content/config";

// Pages props type
type Props = {
  entry: CollectionEntry<"personnas">;
};

// generate getStaticPaths (params, props) from collection
export async function getStaticPaths() {
  const pages = await getPersonnas();

  const paths = pages.map((entry) => {
    return {
      params: {
        lang: entry.item_lang,
        slug: entry.item_slug,
      },
      props: { entry },
    };
  });

  return paths;
}
